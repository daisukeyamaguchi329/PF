<div class = "contact_body">
  <div class = "contact_new">
  <section class="section mt-6">
      <div class="container">
        <div class="columns is-centered">
          <div class="column is-5">
            <div class="card mb-6">
            <header class="card-header">
              <p class="card-header-name">
                <div class = "contact_space">お名前: <%= @contact.name %></div>
              </p>
            </header>
            <div class="card-content">
              <div class="content">
                
                <%= @contact.email %>
              </div>
              <div class="content">
                メッセージ
                <div class = "break">
                <%= @contact.message %>
                </div>
              </div>
            </div>
            <footer class="card-footer">

            <div class = "button card-footer-item">
            <%= form_for(@contact) do |f| %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :message %>
              <%= f.submit '送信' %>
            <% end %>
            </div>
            <div class = "button card-footer-item">
            <%= form_for (@contact), url: back_path do |f| %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :message %>
              <%= f.submit '入力画面に戻る' %>
            <% end %>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </section>
  </div>
</div>


