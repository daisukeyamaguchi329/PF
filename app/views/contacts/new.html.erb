<div class = "contact_body">
  <div class = "contact_new">
   <div class="container">
      <div class="columns is-centered">
        <div class="column is-5">
          <%= form_with model: @contact, url: confirm_path, local: true do |f| %>
           <div class="form-group">
            <%= f.label :subject, '題名' %> <span class ="contact_require">必須</span>
            <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :message, 'お問合せ内容' %> <span class ="contact_require">必須</span>
            <%= f.text_area :message, size: '10x10', class: 'form-control' %>
          </div>
        　　<%= f.hidden_field :name, :value => current_user.name %>
            <%= f.hidden_field :email, :value => current_user.email %>
          <div>
            <font color="black"><%= f.submit '入力内容確認' %></font>
          </div>
          <% end %>
        </div>
     </div>
   </div>
  </div>
</div>