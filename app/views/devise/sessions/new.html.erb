<div class = "background_image2">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-3">
        <div class ="body_top">
         <p class="is-size-4 mb-3">ログイン</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <font color="black"><%= f.email_field :email, :size=>"35", autofocus: true, autocomplete: "email" %></font>
          </div>
          </div>
          <div class="field">
            <%= f.label :パスワード %><br />
            <font color="black"><%= f.password_field :password, :size=>"20", autocomplete: "current-password" %></font>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン状態を保存する %>
            </div>
          <% end %>
          <div class="actions">
            <font color="black"><%= f.submit "ログイン" %></font>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>