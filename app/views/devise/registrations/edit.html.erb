 <section class="section mt-6">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-3">
        <div class="is-size-4 mb-3"><b>パスワード再設定</b></div>
        <div class="row">
          <div class="col-8">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :メールアドレス %><br />
                <font color="black"><%= f.email_field :email, :size=>"35", autofocus: true, autocomplete: "email" %></font>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :新しいパスワード %>
                <% if @minimum_password_length %>
                  <b>(<%= @minimum_password_length %>文字以上)</b>
                <% end %><br />
                <font color="black"><%= f.password_field :password, :size=>"20", autocomplete: "new-password" %></font>
              </div>

              <div class="field">
                <%= f.label :新しいパスワード（確認用） %><br />
                <font color="black"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></font>
              </div>

              <div class="field">
                <%= f.label :現在のパスワード %><br />
                <font color="black"><%= f.password_field :current_password, autocomplete: "current-password" %></font>
              </div>

              <div class="actions">
                <font color="black"><%= f.submit "パスワードを変更" %></font>
              </div>
            <% end %>

            <div class="edit_top_spase">
             <font color="black"><%= link_to "プロフィール編集に戻る",edit_user_path(@user.id) %></font>
            </div>

            <h3>アカウントを削除しますか？</h3>
            <font color="red"><%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか?" }, method: :delete %></font>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>