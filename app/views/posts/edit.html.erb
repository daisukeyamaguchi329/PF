<h1>編集</h1>
<%= form_with model: @post, url:post_path, local:true do |f| %>
  <h4>店名</h4>
  <%= f.text_field :name %>
  <h4>場所</h4>
  <%= f.text_field :location %>
   <h4>画像</h4>
   <%= attachment_image_tag @post, :image, :fill, 60, 60 %>
  <%= f.attachment_field :image %>
  <%= f.submit '保存' %>
<% end %>