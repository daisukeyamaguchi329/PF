<div class="post_page">
 <div class="container">
  <div class="columns is-centered">
    <div class="column is-5">
    <p class="is-size-4 mb-3">投稿を編集
    <%= link_to post_path(@post.id) do %>
        <button class="btn btn-secondary btn-lg" >詳細を閲覧</button>
    <% end %>
    </p>
    <%= form_with model: @post, url:post_path(@post.id), local:true do |f| %>
      <p>店名</p>
      <div class = "post_space"><font color="black"><%= f.text_field :name, size: "60x1" %></font></div>
      <p>場所: 都道府県・市区町村・番地</p>
      <div class = "post_space"><font color="black"><p><%= f.text_field :location, size: "60x1" %></p></font></div>
      <p>写真</p>
      <div class = "post_space"><%= f.attachment_field :image %></div>
      <p>営業時間</p>
      <div class = "post_space">
      <font color="black"><%= f.time_select :business_hours_start, {include_blank: true, start_hour: 0, end_hour:23,minute_step:15},{class: 'time-box'} %></font>
      〜
      <font color="black"><%= f.time_select :business_hours_end, {include_blank: true, start_hour: 0, end_hour:23,minute_step:15},{class: 'time-box'} %></font>
      </div>
      <p>平均予算</p>
      <div class = "post_space">
      <font color="black"><p><%= f.text_field :charge_system, size: "8x1" %>円</font> 〜 <font color="black"><%= f.text_field :charge_system2, size: "8x1" %>円</p></font>
      </div>
      <p>wifi設備</p>
      <div class = "post_space">
      <%= f.radio_button :wifi_equipment, :true %>
      <%= f.label "あり" %>
      <%= f.radio_button :wifi_equipment, :false %>
      <%= f.label "なし" %>
      </div>
      <p>電源</p>
      <div class = "post_space">
      <%= f.radio_button :power, :true %>
      <%= f.label "あり" %>
      <%= f.radio_button :power, :false %>
      <%= f.label "なし" %>
      </div>
      <p>説明</p>
      <div class = "post_space"><font color="black"><%= f.text_area :caption, size: "80x5" %></font></div>
      <div class = "post_space"><font color="black"><%= f.submit '編集' %></font></div>
    <% end %>
    </div>
  </div>
 </div>
</div>
